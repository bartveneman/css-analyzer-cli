{
  "name": "wallace-cli",
  "version": "2.4.0",
  "description": "Pretty CSS analytics on the CLI",
  "homepage": "https://www.projectwallace.com/oss",
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bartveneman/wallace-cli"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "test": "xo && ava"
  },
  "bin": {
    "wallace": "./src/cli.js"
  },
  "main": "./src/cli.js",
  "files": [
    "src"
  ],
  "keywords": [
    "stylesheets",
    "css",
    "styles",
    "analytics",
    "analysis",
    "analyze",
    "analyzer",
    "stats",
    "statistics",
    "cli",
    "cli-app",
    "cssstats",
    "parker",
    "stylestats",
    "projectwallace",
    "wallace",
    "performance",
    "property"
  ],
  "author": "Bart Veneman",
  "license": "MIT",
  "dependencies": {
    "@projectwallace/css-analyzer": "^2.7.1",
    "extract-css-core": "^2.0.0",
    "get-stdin": "^7.0.0",
    "import-jsx": "^3.0.0",
    "ink": "^2.3.0",
    "meow": "^5.0.0",
    "normalize-url": "^4.5.0",
    "pretty-bytes": "^5.3.0",
    "react": "^16.9.0",
    "tinycolor2": "^1.4.1",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "execa": "^2.0.4",
    "prettier": "^1.18.2",
    "semver": "^6.3.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "semicolon": false,
    "prettier": true,
    "extends": "xo-react",
    "rules": {
      "react/prop-types": "off",
      "react/jsx-fragments": "off",
      "react/jsx-curly-newline": "off"
    }
  },
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
